/* pages/my/wallet/redPacketCode/redPacketCode.wxss */

Page {
  
  font-family: '微软雅黑';
}

.redpacket_contain {
  /* height: 177.8vw; */
  height: 100vh;
  background: #cd1233;
}

.h1 {
  font-size: 11.3vw;
  color: #fff;
  text-align: center;
  font-weight: bold;
  line-height: 12vw;
  padding: 4.4vw 0rpx 3.067vw;
  font-family: Arial, Helvetica, sans-serif;
}

.content_txt {
  font-size: 3.6vw;
  color: #fff;
  text-align: center;
}

.conter_bg {
  width: 90.53vw;
  height: 114.13vw;
  margin: 4.8vw auto 0rpx;
}

.qrcond_title {
  text-align: center;
  padding: 4.8vw 0rpx 5.3vw;
}

.qrcond_title text {
  color: #ffcda5;
  font-size: 4vw;
  padding: 2vw 7.3vw;
  background: -webkit-linear-gradient(to bottom, #BD152D , #D71137); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(to bottom, #BD152D , #D71137); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(to bottom, #BD152D , #D71137); /* Firefox 3.6 - 15 */
  background: linear-gradient(to bottom, #BD152D , #D71137); /* 标准的语法 */
  border-radius: 20vw;
}

.qrcond_price {
  color: #cd1233;
  font-size: 6vw;
  text-align: center;
  line-height: 17vw;
}

.qrcond_price text {
  font-size: 24vw;
}

.qrcode_img {
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 37.3vw;
  margin: 8vw auto 0rpx;
 height:42.3vw;

}

.qrcode_img image {
  width: 37.3vw;
  height: 37.3vw;
}

.qrcode_img text {
  font-size: 3.2vw;
  color: #222;
}
.btn_saveimg{
  height: 12vw;
  line-height: 12vw;
  width: 53.33vw;
  margin-top: 6.4vw;
  color: #FECC92;
  background: -webkit-linear-gradient(to bottom, #BD152D , #D71137); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(to bottom, #BD152D , #D71137); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(to bottom, #BD152D , #D71137); /* Firefox 3.6 - 15 */
  background: linear-gradient(to bottom, #BD152D , #D71137); /* 标准的语法 */
}
.btn_saveimg::after{border: none;}
.canvas_box{
  height: 0vh;
  overflow: hidden;
}
.canvasd{
  opacity: 0;
position: fixed;
 top: 200vh; 
}