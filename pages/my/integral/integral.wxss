}

.items-icon {
  width: 56rpx;
  height: 68rpx;
  display: block;
}

.text4 {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(34, 34, 34, 1);
  padding-top: 15rpx;
}

.triangle-up {
  position: absolute;
  left: 325rpx;
  top: -15rpx;
  width: 0;
  height: 0;
  border-left: 20rpx solid transparent;
  border-right: 20rpx solid transparent;
  border-bottom: 20rpx solid white;
}

