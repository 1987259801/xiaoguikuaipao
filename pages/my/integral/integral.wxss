.text3 {
  width: 100vw;
  text-align: center;
  font-size: 120rpx;
  font-family: Impact;
  color: rgba(255, 255, 255, 1);
  line-height: 99rpx;
  padding-top: 20rpx;
}

.tip-container {
  display: flex;
  justify-content: center;
  padding-top: 25rpx;
}

.tip {
  position: relative;
  width: 222rpx;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(255, 255, 255, 1);
}

.tip:after, .tip:before {
  /* background: white; */
  content: "";
  height: 1px;
  position: absolute;
  width: 74rpx;
  border-bottom: 1px dashed white;
}

.tip:before {
  left: -80rpx;
  top: 20rpx;
}

.tip:after {
  right: -75rpx;
  top: 20rpx;
}

.send-order-container {
  margin-left: 30rpx;
  margin-top: 30rpx;
  width: 690rpx;
  height: 150rpx;
  background: rgba(255, 255, 255, 1);
