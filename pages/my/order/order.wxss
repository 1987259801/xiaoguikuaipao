.park_content_main{background: #fff;position: fixed;top:50%; z-index: 10010;left: 50vw;width: 520rpx;height: 385rpx;margin-left: -260rpx;margin-top: -192rpx;display: flex;flex-direction: column;align-items: center;border-radius: 10rpx;}
.park_content_main .content_top{font-size: 4.66667vw;color: #444;padding: 30rpx 0rpx 20rpx;}
