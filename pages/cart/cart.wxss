  position: relative;
  top: -15rpx;
  text-align: center;
}

/* 购物车店铺样式 */

.store {
  background: white;
}
.store2 {
  background: white;
  margin-bottom: 20rpx;
}
.store-title-img {
  
  height: 114rpx;
  line-height: 114rpx;
  width: 750rpx;
  background: white;
  border-bottom: 1rpx solid #eee;
}

.store-title-icon-circle {
  height: 40rpx;
  width: 40rpx;
  display: inline-block;
  margin-left: 20rpx;
  margin-top: 37rpx;
  float: left;
}

.store-logo {
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  margin-left: 20rpx;
  margin-top: 22rpx;
  float: left;
}

.store-name {
  font-size: 34rpx;
  font-family: FZLTHJW--GB1-0;
  color: rgba(34, 34, 34, 1);
  float: left;
  margin-left: 20rpx;
}

.triangle {
  content: " ";
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  border-width: 6rpx 6rpx 0 0;
  border-color: #999;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  float: left;
  margin-top: 53rpx;
  margin-left: 16rpx;
}

