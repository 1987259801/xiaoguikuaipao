/* 中部购物车内容 */

.cart-content {
  margin-top: 80rpx;
  margin-bottom: 100rpx;
}

/* 购物车里面货物样式 */

.good {
  clear: both;
  width: 750rpx;
  height: 150rpx;
  padding: 30rpx 0px;
  background: rgba(255, 255, 255, 1);
}

.good-line {
  width: 710rpx;
  height: 1rpx;
  background: #eee;
  position: relative;
  left: 40rpx;
}

.good-icon-circle {
  height: 40rpx;
  width: 40rpx;
  display: inline-block;
  margin-left: 20rpx;
  float: left;
}

.good-img {
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  margin-left: 20rpx;
  float: left;
  border-radius: 10rpx;
}

.product-name-price-num-style {
  display: inline-block;
  width: 460rpx;
  height: 150rpx;
  margin-left: 30rpx;
  float: left;
}

.product-name {
  width: 446rpx;
  font-size: 36rpx;
  font-family: FZLTHJW--GB1-0;
  color: rgba(34, 34, 34, 1);
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin-top: -8rpx;
}

.row-container {
  width: 460rpx;
}

.style-price {
  width: 240rpx;
  float: left;
  
}

.product-style {
  font-size: 28rpx;
  font-family: STHeiti;
  color: rgba(153, 153, 153, 1);
  margin-top: 5rpx;
  width: 240rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.product-price0 {
  font-size: 28rpx;
  font-family: STHeiti;
  color: rgba(153, 153, 153, 1);
  text-decoration: line-through;
  position: relative;
  top: 15rpx;
}

.product-price1 {
  font-size: 32rpx;
  font-family: STHeitiK-Light;
  color: rgba(68, 68, 68, 1);
  position: relative;
  top: 15rpx;
  left: 15rpx;
}

.change-num-container {
  width: 190rpx;
  height: 60rpx;
  float: right;
  /* background-color: gray; */
  position: relative;
  top: 45rpx;
}

.choose-product-num {
  display: inline-block;
  width: 70rpx;
  height: 60rpx;
