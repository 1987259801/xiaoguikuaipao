Page {
  background-color: #f8f8f8;
  width: 100%;
}

.couponList_content {
  margin: 4vw;
}

.couponList_content .coupon_list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 2.6666vw;
}

.couponList_content .coupon_list .coupon_list_l {
  width: 26.6666vw;
  height: 26.6666vw;
}

.couponList_content .coupon_list .coupon_list_r {
  height: 26.6666vw;
  width: 65.3333vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
}

.couponList_content .coupon_list .coupon_list_r .coupon_list_r_img {
  height: 26.6666vw;
  width: 65.3333vw;
  position: absolute;
  top: 0vw;
  left: 0vw;
  z-index: 0;
}

.couponList_content .coupon_list .coupon_list_r text {
  text-align: center;
  line-height: 7vw;
  z-index: 1;
  position: relative;
  margin-right: 6.6666vw;
}

.couponList_content .coupon_list .coupon_list_r text.text_top {
  font-size: 4.6666vw;
  color: #fff;
}

.couponList_content .coupon_list .coupon_list_r text.text_bottom {
  font-size: 6.6666vw;
  color: #fff;
  padding-bottom: 10rpx;
  font-weight: 600;
  /* position: fixed; */
}

