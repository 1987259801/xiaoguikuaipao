/*-------------------------模板1-------------------------------  */

.activepage_content_top {
  display: flex;
  flex-wrap: wrap;
}

.activepage_content_top  .img_big {
  /* height: 46.76vw; *//* height:  46.78vw; */
  /* height: 46.885vw; */
   height: 47vw;
}

.activepage_content_top .activepageimg_list_alline {
  display: flex;
}

.activepage_content_top .activepageimg_list_alline .img_normal:last-child {
  border-top: none;
}

.activepage_content_top .activepageimg_list_alline .img_normal:first-child {
  border-left: none;
}

.activepage_content_top  .img_normal {
  border-top: 1rpx solid #eee;
  border-left: 1rpx solid #eee;
}

/*------------------模板2--------------------  */

.activepage_content_bottom {
  display: flex;
  flex-wrap: wrap;
}

.activepage_content_top  .img_normal:first-child {
  border-top: none;
}

.activepage_content_bottom .activepageimg_list .img_normal {
  border-top: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
}

.activepage_content_bottom .activepageimg_list:nth-of-type(even) .img_normal {
  border-right: none;
}

.activepage_content_top  image,
.activepage_content_bottom .activepageimg_list image {
  width: 49.86vw;
}

.activepage_content_bottom .activepageimg_list,
.activepage_content_top .activepageimg_list {
  display: inline-block;
}

.activepage_content_bottom .activepageimg_list .img_normal,
.activepage_content_top  .img_normal {
  /* height: 23.27vw; */
  /* height: 23.38vw; */
  height: 23.41vw;
}
.activepage_content_bottom .activepageimg_list:first-child .img_normal,.activepage_content_bottom .activepageimg_list:nth-child(2) .img_normal{
  border-top: none;
}
.activepage_content_bottom .activepageimg_list:last-child .img_normal,
.activepage_content_bottom .activepageimg_list:nth-last-child(2) .img_normal {
  border-bottom: none;
}

/* ------------------------模板3-------------------------- */

.box_activepage2 {
}

.box_activepage2 .activepage_content2 {
  display: flex;
  width: 100vw;
}

.activepage_content2 .imgcontent_l {
  width: 40vw;
}

.activepage_content2 .imgcontent_l image {
  /* height: 378rpx; */
  height: 50.65vw;
  width: 40vw;
}

.activepage_content2 .imgcontent_r {
  width: 60vw;
  display: flex;
  flex-wrap: wrap;
}

.activepage_content2 .imgcontent_r image {
  width: 29.7vw;
  /* height: 190rpx; */
  height: 25.25vw;
  border-left: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.activepage_content2 .imgcontent_r image:last-child,
.activepage_content2 .imgcontent_r image:nth-last-child(2) {
  border-bottom: none;
}

/* 兼容 --当模式图左侧大图不存在时 begin*/

.activepage_content2 .imgcontent_r_alline {
  width: 100vw;
  display: flex;
  flex-wrap: wrap;
}

.activepage_content2 .imgcontent_r_alline image {
  width: 49.8vw;
  /* height: 190rpx; */
  /* height: 25.22vw; */
  height: 25.25vw;
  border-left: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.activepage_content2 .imgcontent_r_alline image:last-child,
.activepage_content2 .imgcontent_r_alline image:nth-last-child(2) {
  border-bottom: none;
}

.activepage_content2 .imgcontent_r_alline image:nth-of-type(odd) {
  border-left: none;
}

/*-----------------兼容 --当模式图左侧大图不存在时 end-----------------------  */

.box_activepage2 .activepage_parallel {
  width: 100vw;
  display: flex;
  flex-wrap: wrap;
}

.box_activepage2 .activepage_parallel .parallel_img {
  display: inline-block;
}

.box_activepage2 .activepage_parallel .parallel_img image {
  width: 49.85vw;
  height: 23.27vw;
  border-top: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
}

.box_activepage2 .activepage_parallel .parallel_img:last-child image,
.box_activepage2 .activepage_parallel .parallel_img:nth-of-type(even) image {
  border-right: none;
}

