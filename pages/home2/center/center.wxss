/* 每日推荐 */

.box_recommendation .recommendation_title {
  height: 8vw;
  line-height: 8vw;
  width: 94vw;
  padding: 0vw 3vw;
  color: #e5004f;
  font-size: 5.3333vw;
  font-weight: bold;
  font-family: PingFang-SC-Heavy;
}

.box_recommendation .recommendation_scroll {
  display: flex;
  flex-direction: row;
  padding: 2.666vw 0.666vw 0vw 0rpx;
  white-space: nowrap;
}

.recommendation_scroll .recommendation_list {
  border: 1rpx solid #eee;
  width: 42.6666vw;
  display: inline-block;
  margin-right: 2vw;
}
.recommendation_scroll .recommendation_list:first-child{margin-left: 2.666vw}
.recommendation_scroll .recommendation_list:last-child{margin-right: 2.666vw;}
.recommendation_scroll .recommendation_list .text_imgbg {
  width: 42.6666vw;
  height: 26.6666vw;
}

.recommendation_scroll .recommendation_list .text_box {
  height: 10.666vw;
  display: flex;
}

.recommendation_scroll .recommendation_list .text_box .text_imglogo {
  width: 12vw;
  height: 12vw;
  position: relative;
  top: -6vw;
  padding-left: 2.666vw;
}

.recommendation_scroll .recommendation_list .text_box text {
  color: #222;
  font-size: 4vw;
  padding-left: 1.8vw;
    text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  padding-right: 1.8vw;
}

